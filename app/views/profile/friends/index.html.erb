<h1>My Friends</h1>

<div class="container">
  <div class="well">
    <%= form_tag profile_friends_path do %>
      <%= label_tag :username %>
      <%= text_field_tag :username, nil, class:'text-field' %>
      <%= submit_tag "Add Friend", class:'btn' %><br><br>
    <% end %>
    <% if @friends.empty? %>
      <p>You can add friends if you know their username!</p>
    <% else %>
      <% @friends.each do |friend| %>
        <%= link_to friend.username, user_path(friend.username), :class => 'btn btn-standard' %>
      <% end %>
    <% end %>
  </div>
</div>
