<h1>My Friends</h1>

<div class="container">
  <%= form_tag profile_friends_path do %>
    <p style="color:white"><%= label_tag :username %></p>
    <%= text_field_tag :username %>
    <%= submit_tag "Add Friend" %>
  <% end %>

  <% if current_user.friends.empty? %>
  <div class="well">
    <p>You have no friends, try adding some :^)</p>
  </div>
  <% else %>
  <% current_user.friends.each do |friend| %>
    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="friend">
          <div class="thumbnail">
            <%= image_tag friend.image %>
          </div>
          <h3><%= link_to friend.username, user_path(friend.username) %></h3>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
