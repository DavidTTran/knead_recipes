<h1>My Friends</h1>

<div class="container">
  <div class="well">
    <%= form_tag profile_friends_path do %>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
      <%= submit_tag "Add Friend" %>
    <% end %>

    <% if @friends.empty? %>
      <p>You have no friends, try adding some :^)</p>
    <% else %>
      <% @friends.each do |friend| %>
        <%= link_to friend.username, user_path(friend.username), :class => 'btn btn-standard' %>
      <% end %>
    <% end %>
  </div>
</div>
