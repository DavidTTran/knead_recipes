<h1><%= @recipe.title %></h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6" class="panel panel-default">
      <%= image_tag @recipe.image, :class => "thumbnail", :width => "100%" %><br>
      <p class='white-info'>Prep time: <%= @recipe.time %> minutes</p>
      <% if current_user.has_favorited?(@recipe.id)(@recipe.id) %>
      <%= link_to 'Delete from Favorites', profile_favorite_path(@recipe.id), method: :delete, :class => "btn btn-default" %>
      <% else %>
      <%= button_to 'Add to Favorites', profile_favorites_path(id: @recipe.id), method: :post, :class => "btn btn-default" %>
      <% end %>
    </div>
  <div class="col-sm-6">
    <section id="ingredients">
      <h3 style="color:white">Ingredients:</h3>
        <% @recipe.ingredients.list.each do |ingredient| %>
        <p class='white-info'><%= ingredient %></p>
        <% end %>
    </section>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <section id="nutrition">
      <h3 style="color:white">Nutrition Information:</h3>
        <p class='white-info'><%= @recipe.nutrition.calories %> calories</p>
        <p class='white-info'><%= @recipe.nutrition.protein %> g protein</p>
        <p class='white-info'><%= @recipe.nutrition.fat %> g fat</p>
        <p class='white-info'><%= @recipe.nutrition.carbohydrates %> g carbohydrates</p>
        <p class='white-info'><%= @recipe.nutrition.cholesterol %> mg cholesterol</p>
        <p class='white-info'><%= @recipe.nutrition.sodium %> mg sodium</p>
        <p class='white-info'><%= @recipe.nutrition.sugar %> g sugar</p>
    </section>
  </div>
  <div class="col-sm-6">
    <section id="instructions">
      <div class="well">
      <h3>Instructions:</h3>
      <% if @recipe.instructions.list.nil? %>

        <p style="font-size:18px">Instructions are unavailable for this recipe.</p>
      <% else %>
        <% @recipe.instructions.list.each do |instruction| %>
          <p style="font-size:18px"><%= instruction %></p>
        <% end %>
      <% end %>
    </div>
    </section>
  </div>
</div>
