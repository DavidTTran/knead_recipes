<h2>Results</h2>

<% @recipes.each do |recipe| %>
  <div class="recipes">
    <%= link_to recipe_path(recipe.id) do %>
      <%= recipe.title %><br>
      <%= image_tag recipe.image %><br>
    <% end %>
    <p>You're missing <%= recipe.ingredients.missing_ingredients %> Ingredients.</p>
  </div>
<% end %>
