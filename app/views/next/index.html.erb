<%= render 'layouts/header' %>
<div class="container-fluid, width: 100%">
  <div class="container">
    <div class="row">
      <div class="col-sm">
        One of three columns
      </div>
      <div class="col-sm">
        <div class="form-group">
          <%= form_for(@user) do |f| %>
            <%= f.text_field :ingredient, :class => 'form-control' %><br>
            <%= f.text_field :password, :class => 'form-control' %><br>
            <%= f.submit "Find Recipes", :class => 'btn btn-primary'%><br>
          <% end %>
        </div>
      </div>
      <div class="col-sm">
        One of three columns
      </div>
    </div>
  </div>
</div>
